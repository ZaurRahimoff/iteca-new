extends ../layouts/default

include ../mixins/_title

block variables
  - var pageTitle = 'Sponsors - CEO'
  - var pageDescription = 'Official sponsors and partners of Caspian Event Organisers (CEO). View our sponsors by year and explore partnership opportunities.'
  - var navbarStyle = 'white'

block content
  // Hero Section with Title
  section.sponsors-hero
    .container
      .sponsors-hero__content
        +title('Sponsors', 'h1')

  // Sponsors Accordion Section
  section.sponsors-section
    .container
      .accordion#accordionSponsors
        // Sponsors 2026 - Collapsed
        .accordion-item.sponsors-accordion__item
          h2.accordion-header
            button.accordion-button.collapsed(
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapse2026"
              aria-expanded="false"
              aria-controls="collapse2026"
            )
              span.sponsors-accordion__title Sponsors 2026
              i.fas.fa-chevron-down.sponsors-accordion__icon
          #collapse2026.accordion-collapse.collapse(data-bs-parent="#accordionSponsors")
            .accordion-body
              .row.row-cols-1.row-cols-md-2.row-cols-lg-2.g-4
                .col
                  article.sponsor-card.card.h-100.border-0.wo-image
                    .sponsor-logo
                      img(src="assets/img/sponsors/sponsor1.png" alt="Railgo" loading="lazy")
                    p.sponsor-type Railgo
                .col
                  article.sponsor-card.card.h-100.border-0.wo-image
                    .sponsor-logo
                      img(src="assets/img/sponsors/sponsor2.png" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing

        // Sponsors 2025 - Open by default
        .accordion-item.sponsors-accordion__item
          h2.accordion-header
            button.accordion-button(
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapse2025"
              aria-expanded="true"
              aria-controls="collapse2025"
            )
              span.sponsors-accordion__title Sponsors 2025
              i.fas.fa-chevron-down.sponsors-accordion__icon
          #collapse2025.accordion-collapse.collapse.show(data-bs-parent="#accordionSponsors")
            .accordion-body
              .row.row-cols-2.row-cols-md-3.row-cols-lg-5.g-4
                // Row 1 - 5 cards
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner1.webp" alt="Railgo" loading="lazy")
                    p.sponsor-type Railgo
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner2.webp" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner3.webp" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner4.webp" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner5.webp" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing
                
                // Row 2 - 3 cards
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner6.webp" alt="Railgo" loading="lazy")
                    p.sponsor-type Railgo
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner7.webp" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing
                .col
                  article.sponsor-card.card.h-100.border-0
                    .sponsor-logo
                      img(src="assets/img/webp/partner8.webp" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing

        // Sponsors 2024 - Collapsed
        .accordion-item.sponsors-accordion__item
          h2.accordion-header
            button.accordion-button.collapsed(
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapse2024"
              aria-expanded="false"
              aria-controls="collapse2024"
            )
              span.sponsors-accordion__title Sponsors 2024
              i.fas.fa-chevron-down.sponsors-accordion__icon
          #collapse2024.accordion-collapse.collapse(data-bs-parent="#accordionSponsors")
            .accordion-body
              .row.row-cols-1.row-cols-md-2.row-cols-lg-2.g-4
                .col
                  article.sponsor-card.card.h-100.border-0.wo-image
                    .sponsor-logo
                      img(src="assets/img/sponsors/sponsor1.png" alt="Railgo" loading="lazy")
                    p.sponsor-type Railgo
                .col
                  article.sponsor-card.card.h-100.border-0.wo-image
                    .sponsor-logo
                      img(src="assets/img/sponsors/sponsor2.png" alt="Prior Leasing" loading="lazy")
                    p.sponsor-type Prior Leasing
