          article.photo-item.card.h-100.border-0
            a.item-link(href="assets/img/webp/welcome/photo-slide2.webp" data-fancybox="gallery" data-caption="Photo from 1st Azerbaijan International Investment Forum")
            .item-image.position-relative
              img.card-img(src="assets/img/webp/welcome/photo-slide2.webp" alt="Photo from 1st Azerbaijan International Investment Forum" loading="lazy")
              .item-overlay
