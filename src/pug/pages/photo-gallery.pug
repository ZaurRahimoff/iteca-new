                i.fas.fa-search.overlay-icon
        .col-12.col-md-6.col-lg-3
          article.photo-item.card.h-100.border-0
            a.item-link(href="assets/img/webp/welcome/photo-slide4.webp" data-fancybox="gallery" data-caption="Photo from 1st Azerbaijan International Investment Forum")
            .item-image.position-relative
              img.card-img(src="assets/img/webp/welcome/photo-slide4.webp" alt="Photo from 1st Azerbaijan International Investment Forum" loading="lazy")
              .item-overlay
                i.fas.fa-search.overlay-icon


  // Pagination Section
  section.pb-4.pb-md-5
    .container
      .row
        .col-12
          +pagination({
            currentPage: 1,
            totalPages: 10,
            prevText: 'Əvvəl',
