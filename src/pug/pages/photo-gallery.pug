extends ../layouts/default

include ../mixins/_pagination

block variables
  - var pageTitle = '1st AZERBAIJAN INTERNATIONAL INVESTMENT FORUM - Photo Gallery - CEO'
  - var pageDescription = 'Photo gallery from 1st AZERBAIJAN INTERNATIONAL INVESTMENT FORUM organized by Caspian Event Organisers (CEO).'
  - var navbarStyle = 'white'

block content
  // Hero Section with Event Title
  section.photo-gallery-hero
    .container
      .photo-gallery-hero__content
        h1.photo-gallery-hero__title 1st AZERBAIJAN INTERNATIONAL INVESTMENT FORUM

  // Photo Gallery Grid Section
  section.photo-gallery-section
    .container
      .row.g-4.photo-gallery-grid
        // Row 1
        .col-12.col-md-6.col-lg-3
          article.photo-item.card.h-100.border-0
            a.item-link(href="assets/img/webp/welcome/photo-slide1.webp" data-fancybox="gallery" data-caption="Photo from 1st Azerbaijan International Investment Forum")
            .item-image.position-relative
              img.card-img(src="assets/img/webp/welcome/photo-slide1.webp" alt="Photo from 1st Azerbaijan International Investment Forum" loading="lazy")
              .item-overlay
                i.fas.fa-search.overlay-icon
