        .col-12.col-md-6.col-lg-3
          article.photo-item.card.h-100.border-0
            a.item-link(href="assets/img/webp/welcome/photo-slide3.webp" data-fancybox="gallery" data-caption="Photo from 1st Azerbaijan International Investment Forum")
